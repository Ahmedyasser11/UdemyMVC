@model UdemyMVC.Models.User

@{
    ViewData["Title"] = "Profile";
}

<h1 class="text-center">Profile</h1>

<div class="container mt-4">
    <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4 text-center">
                <div class="position-relative d-inline-block">
                    <!-- The image that displays the current or newly uploaded photo -->
                    <img id="profilePicture" src="@Model.Image" class="rounded-circle img-thumbnail" alt="Profile Picture" width="300" height="300" />

                    <label for="ImageUpload" class="btn btn-primary position-absolute" style="top: 75%; left: 50%; transform: translate(-50%, -50%); display: none;">Edit</label>
                    <!-- File input for the image -->
                    <input id="ImageUpload" type="file" name="photo" class="form-control-file d-none" />
                </div>
            </div>
            <div class="col-md-8">
                <h3>User Details</h3>

                <input asp-for="ID" type="hidden" />
                <input asp-for="Email" class="form-control mb-3" placeholder="Email" readonly />
                <input asp-for="RoleName" type="hidden" />

                <div class="form-group">
                    <label asp-for="FullName">Full Name</label>
                    <input asp-for="FullName" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Address">Address</label>
                    <input asp-for="Address" class="form-control" />
                </div>

                <button type="submit" class="btn btn-success mt-3">Update Profile</button>
            </div>
        </div>
    </form>
    <h4 class="mt-5">Enrolled Courses</h4>
    <div class="row">
        @if (Model?.Enrolement?.Any() ?? false)
        {
            foreach (var enrollment in Model.Enrolement)
            {
                var course = enrollment.Course;
                                <div class="col-md-4 mb-4">
                                    <div class="card">
                                        <img src="@course.CourseImage" width="300" height="270" class="card-img-top" alt="@course.CourseName">
                                        <div class="card-body">
                                            <h5 class="card-title">@course.CourseName</h5>
                                            <p class="card-text">@course.Description</p>
                                            <p class="card-text"><strong>Price:</strong> @course.Price $</p>
                                            <p class="card-text"><strong>Rate:</strong> 
                                @if (Model.CourseRates != null && Model.CourseRates.Any(cr => cr.CourseID == course.ID))
                                {
                                    @Model.CourseRates.First(cr => cr.CourseID == course.ID).Rate
                                }
                                else
                                {
                                    @:N/A
                                }
                                            </p>
                                        </div>
                                    </div>
                                </div>
            }
        }
        else
        {
                    <p class="text-muted">No enrolled courses found.</p>
        }
    </div>
</div>

@section Scripts {
        <script src="~/js/Profile.js"></script>
}
